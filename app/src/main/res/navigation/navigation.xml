<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="org.d3if4055.praassesment.fragment.HomeFragment"
        android:label="HomeFragment" >
        <action
            android:id="@+id/action_homeFragment_to_persegiFragment"
            app:destination="@id/persegiFragment" />
        <action
            android:id="@+id/action_homeFragment_to_segitigaFragment"
            app:destination="@id/segitigaFragment" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if4055.praassesment.fragment.AboutFragment"
        android:label="fragment_about"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/persegiFragment"
        android:name="org.d3if4055.praassesment.fragment.PersegiFragment"
        android:label="fragment_persegi"
        tools:layout="@layout/fragment_persegi" />
    <fragment
        android:id="@+id/segitigaFragment"
        android:name="org.d3if4055.praassesment.fragment.SegitigaFragment"
        android:label="SegitigaFragment" />
</navigation>